#!/bin/sh

## Makes a nice fade in efect on my wallpaper on the start
## To make the images use this command to select the image and place in the right folder 
## convert $HOME/.dwm/wallpaper/475243.jpg -blur 0x1 $HOME/.dwm/wallpaper/blur/blur1.jpg && /
## convert $HOME/.dwm/wallpaper/475243.jpg -blur 0x2 $HOME/.dwm/wallpaper/blur/blur2.jpg && /
## convert $HOME/.dwm/wallpaper/475243.jpg -blur 0x3 $HOME/.dwm/wallpaper/blur/blur3.jpg && /
## convert $HOME/.dwm/wallpaper/475243.jpg -blur 0x4 $HOME/.dwm/wallpaper/blur/blur4.jpg && /
## convert $HOME/.dwm/wallpaper/475243.jpg -blur 0x5 $HOME/.dwm/wallpaper/blur/blur5.jpg && /
## convert $HOME/.dwm/wallpaper/475243.jpg -blur 0x6 $HOME/.dwm/wallpaper/blur/blur6.jpg && /
## convert $HOME/.dwm/wallpaper/475243.jpg -blur 0x7 $HOME/.dwm/wallpaper/blur/blur7.jpg && /
## convert $HOME/.dwm/wallpaper/475243.jpg -blur 0x8 $HOME/.dwm/wallpaper/blur/blur8.jpg  

sleep 2 && feh --bg-fill $HOME/.dwm/wallpaper/blur/blur8.jpg && sleep 0.2 && feh --bg-fill $HOME/.dwm/wallpaper/blur/blur7.jpg && sleep 0.2 && feh --bg-fill $HOME/.dwm/wallpaper/blur/blur6.jpg && sleep 0.2 && feh --bg-fill $HOME/.dwm/wallpaper/blur/blur5.jpg && sleep 0.2 && feh --bg-fill $HOME/.dwm/wallpaper/blur/blur4.jpg && sleep 0.2 && feh --bg-fill $HOME/.dwm/wallpaper/blur/blur3.jpg && sleep 0.2 && feh --bg-fill $HOME/.dwm/wallpaper/blur/blur2.jpg && sleep 0.2 && feh --bg-fill $HOME/.dwm/wallpaper/blur/blur1.jpg && sleep 0.2 && feh --bg-fill $HOME/.dwm/wallpaper/475243.jpg

